<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/layout_game_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_game_gold_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="220dp"
            android:background="@mipmap/home_gold_one"
            android:gravity="center"
            android:textColor="@color/get_gold_color"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_game_gold_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="360dp"
            android:background="@mipmap/home_gold_three"
            android:gravity="center"
            android:textColor="@color/get_gold_color"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_game_gold_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:layout_marginRight="4dp"
            android:background="@mipmap/home_gold_three"
            android:gravity="center"
            android:textColor="@color/mk_gonglue_color"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_game_gold_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="360dp"
            android:layout_marginRight="10dp"
            android:drawableTop="@mipmap/home_gold_four"
            android:gravity="center"
            android:text="视频红包"
            android:textColor="@color/mk_gonglue_color"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout_task_info"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@mipmap/home_bottom"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_task"
                android:layout_width="134dp"
                android:layout_height="77dp"
                android:src="@mipmap/home_task" />

            <FrameLayout
                android:id="@+id/layout_hongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp">

                <ImageView
                    android:layout_width="134dp"
                    android:layout_height="77dp"
                    android:src="@mipmap/home_hb" />

                <TextView
                    android:id="@+id/tv_user_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="6dp"
                    android:text="12元"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>


</FrameLayout>