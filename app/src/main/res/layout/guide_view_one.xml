<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="相同数字的球碰撞合成新的球"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/iv_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_guide_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/guide_one_continue" />

    <ImageView
        android:id="@+id/iv_guide_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:src="@mipmap/guide_one_bottom" />

</RelativeLayout>
